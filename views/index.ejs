<div class="dashboard">
	<h2>Übersicht</h2>
	
	<div class="stats-cards">
		<div class="card">
			<h3>Messwerte Gesamt</h3>
			<div class="stat"><%= total %></div>
		</div>
	</div>
	
	<h3>Aktuelle Messwerte</h3>
	<table>
		<thead>
			<tr>
				<th>#</th>
				<th>Zeit</th>
				<th>Gerät</th>
				<th>Quelle</th>
				<th>Werte</th>
			</tr>
		</thead>
		<tbody>
			<% records.forEach(record => { %>
				<tr>
					<td><a href="/record/<%= record.id %>"><%= record.id %></a></td>
					<td class="timestamp"><%- formatDate(record.time, defaultUiDateFormat) %></td>
					<td><a href="/device/<%= record.device %>"><%= record.deviceName %></a></td>
					<td><a href="/source/<%= record.source %>"><%= record.sourceFilename || record.sourceType || 'Unbekannt' %></a></td>
					<td><%= JSON.stringify(record.data) %></td>
				</tr>
			<% }); %>
		</tbody>
	</table>
	
	<p class="view-all">
		<a href="/records">Alle Messwerte anzeigen →</a>
	</p>
</div> 